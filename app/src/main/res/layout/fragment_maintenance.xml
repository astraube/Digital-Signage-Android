<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorPrimaryDark"
    android:clipChildren="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/maintenance_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/settings_icon"
            android:text="@string/action.device.maintenance"
            android:textSize="30sp" />

        <View
            android:id="@+id/separator_header"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/settings_icon"
            android:background="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/config_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:id="@+id/maintenance_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_settings_white_36dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/maintenance_icon"
                android:text="@string/action.device.config" />
            <View
                android:id="@+id/separator_confs"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/maintenance_icon"
                android:background="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/desligar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:id="@+id/desligar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_theme_light_dark_white_36dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/desligar_icon"
                android:text="@string/action.screen.turnoff" />
            <View
                android:id="@+id/separator_tela"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/desligar_icon"
                android:background="@color/white" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
